{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "next/core-web-vitals", "plugin:prettier/recommended"],
  "ignorePatterns": ["**/generated/**", "**/*.d.ts"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "endOfLine": "auto"
      }
    ]
  },
  "overrides": [
    {
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
      },
      "plugins": ["@typescript-eslint", "simple-import-sort"],
      "files": ["*.config.js", "*.config.ts"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    },
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "plugins": ["@typescript-eslint", "unused-imports", "tailwindcss", "simple-import-sort"],
      "extends": [
        "plugin:tailwindcss/recommended",
        "airbnb-typescript",
        "next/core-web-vitals",
        "plugin:prettier/recommended"
      ],
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "rules": {
        "@typescript-eslint/comma-dangle": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-var-requires": "off",
        "array-bracket-spacing": "warn",
        "array-element-newline": [
          "error",
          {
            "ArrayExpression": "consistent",
            "ArrayPattern": {
              "minItems": 3
            }
          }
        ],
        "function-call-argument-newline": ["warn", "consistent"],
        "import/no-anonymous-default-export": "off",
        "import/prefer-default-export": "off",
        "import/no-unresolved": [
          "error",
          {
            "ignore": ["\\.css$", "\\.svg", "\\.svg?url"]
          }
        ],
        // "multiline-ternary": [
        //   "error",
        //   "always-multiline"
        // ],
        // "no-multi-spaces": "warn",
        "no-multiple-empty-lines": [
          "warn",
          {
            "max": 1,
            "maxEOF": 1
          }
        ],
        "no-namespace": [
          "off",
          {
            "allowDeclarations": true
          }
        ],
        "no-restricted-imports": [
          "error",
          {
            "patterns": ["..*"]
          }
        ],
        "no-trailing-spaces": [
          "warn",
          {
            "ignoreComments": true,
            "skipBlankLines": true
          }
        ],
        "object-curly-spacing": ["warn", "always"],
        "object-property-newline": [
          "warn",
          {
            "allowAllPropertiesOnSameLine": true
          }
        ],
        "prettier/prettier": [
          "error",
          {
            "endOfLine": "auto",
            "singleQuote": true
          }
        ],
        "simple-import-sort/exports": "error",
        "simple-import-sort/imports": [
          "error",
          {
            "groups": [
              ["^react", "^@?\\w"], // Packages `react` related packages come first.
              ["^\\u0000"], // side effect (imports that do not export anything)
              [
                "^config",
                "^constants",
                "^components",
                "^context",
                "^fonts",
                "^graphql",
                "^hooks",
                "^pages",
                "^state",
                "^theme",
                "^utils"
              ],
              // Internal packages.
              ["^(|pages|components|config|constants|context|graphql|hooks|layouts|lib|state|utils)(/.*|$)"],
              ["^(~|types)(/.*|$)"],
              ["^(|public|styles)(/.*|$)"],
              // Parent imports. Put `..` last.
              ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
              // Other relative imports. Put same-folder imports and `.` last.
              ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
              // Style imports.
              ["^.+\\.?(css|scss)$"]
            ]
          }
        ],
        "unused-imports/no-unused-imports": "error",
        "unused-imports/no-unused-vars": [
          "error",
          {
            "argsIgnorePattern": "^_"
          }
        ]
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
