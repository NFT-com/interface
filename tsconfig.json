{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    // "noErrorTruncation": true, // Prints full TS types in IDE    ,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "target": "ESNext",
    "types": ["jest"]
  },
  "exclude": ["node_modules", "./node_modules/**/*", "cypress"],
  "include": ["next-env.d.ts", "modules.d.ts", "**/*.js", "**/*.ts", "**/*.tsx", "types/**/*.d.ts", "additional.d.ts"]
}
